                            <DataGridTextColumn Binding="{Binding Surname}" Header="Nazwisko" />
                            <DataGridTextColumn Binding="{Binding Phone}" Header="Telefon" />
                            <DataGridTextColumn Binding="{Binding Activity}" Header="Temat" />
                            <DataGridTextColumn Binding="{Binding Room}" Header="Sala" />
                            <DataGridTextColumn Binding="{Binding Date}" Header="Data" />

                            <DataGridTextColumn Binding="{Binding Start_time}" Header="Godzina rozpoczęcia" />
                            <DataGridTextColumn Binding="{Binding End_time}" Header="Godzina zakończenia" />
