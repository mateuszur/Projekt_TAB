                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  Harmonogram content  -->
                <Grid Height="64" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label
