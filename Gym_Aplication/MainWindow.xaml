                        <TextBlock VerticalAlignment="Center" Text="Statystyki i analizy" />
                    </StackPanel>
                </RadioButton>
                <!--<RadioButton
                    x:Name="ObslugaKlienta"
                    Click="ObslugaKlienta_Click"
                    IsChecked="False"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonStyleWithAnimation}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Headset" />
                        <TextBlock VerticalAlignment="Center" Text="Obsługa klienta" />
                    </StackPanel>
                </RadioButton>-->
                <RadioButton
                    x:Name="Raportowanie"
                    Click="Raportowanie_Click"
                    IsChecked="False"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonStyleWithAnimation}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Alert" />
                        <TextBlock VerticalAlignment="Center" Text="Raportowanie awarii" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    x:Name="Informacje"
                    Click="Informacje_Click"
                    IsChecked="False"
                    IsEnabled="True"
                    Style="{StaticResource RadioButtonStyleWithAnimation}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Information" />
                        <TextBlock VerticalAlignment="Center" Text="Informacje" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

