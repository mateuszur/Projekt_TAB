                            Grid.Column="1"
                            Height="25"
                            Click="EditTrainer_Click"
                            Content="Edituj trenera" Width="85" 
                            HorizontalAlignment="Left" />
                        
                    </Grid>

                </Grid>
            </Grid>

            <Grid
                x:Name="Content_ZarzadzanieCzlonkami"
                Grid.Row="1"
                Visibility="Collapsed" Height="325" VerticalAlignment="Top" Margin="0,1,0,0">
                <!--  Zarzadzanie Czlonkami content  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <extToolkit:WatermarkTextBox 
                            x:Name="FilterTextBox2"
                            Width="150"
                            Height="25"
                            TextChanged="FilterTextBox2_TextChanged"
                            Watermark="Filtruj według nazwy..." Margin="222,0,165,2" HorizontalAlignment="Right" />

                        <ComboBox
                            x:Name="SortComboBox2"
                            Width="150"
                            Height="25"
                            SelectionChanged="SortComboBox2_SelectionChanged" Grid.ColumnSpan="2" Margin="377,1,10,1" HorizontalAlignment="Right">
                            <ComboBoxItem Content="ID" />
                            <ComboBoxItem Content="Imię" />
                            <ComboBoxItem Content="Nazwisko" />
                            <ComboBoxItem Content="Telefon" />
                            <ComboBoxItem Content="E-mail" />
                            <ComboBoxItem Content="Data urodzenia" />
                            <ComboBoxItem Content="Adres" />
                            <ComboBoxItem Content="Data zatrudnienia" />
                        </ComboBox>
                    </Grid>

                    <Label Grid.Row="0" Content="Lista członków:" Width="100" HorizontalAlignment="Left" />
                    <DataGrid
                        x:Name="MembersDataGrid"
                        AutoGenerateColumns="False"
                        CanUserAddRows="True"
                        CanUserDeleteRows="True"
                        IsReadOnly="False" Margin="0,27,0,-211" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ID}" Header="ID" />
                            <DataGridTextColumn Binding="{Binding FristName}" Header="Imię" />
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Nazwisko" />
                            <DataGridTextColumn Binding="{Binding E_Mail}" Header="Email" />
                            <DataGridTextColumn Binding="{Binding Phone}" Header="Telefon" />
                            <DataGridTextColumn Binding="{Binding DateOfRegistration}" Header="Data rejestracji" />
                            <DataGridTextColumn Binding="{Binding Sex}" Header="Płeć" />
                            <DataGridTextColumn Binding="{Binding Adress}" Header="Adres" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid
                        Grid.Row="1"
                        Margin="10,514,0,-252" HorizontalAlignment="Left" Width="445">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Dodajczlonka"
                                Grid.Column="1"
                                Height="25"
                                Click="Dodajczlonka_Click"
                                Content="Dodaj czlonka" Width="85" 
                                HorizontalAlignment="Left" Margin="90,0,0,0" />
                        <Button x:Name="Usunczlonka"
                                Grid.Column="1"
                                Width="85"
                                Height="25"
                                HorizontalAlignment="Center"
                                Click="Usunczlonka_Click"
                                Content="Usuń czlonka" />
                        <Button x:Name="Pobierzraport3"
                                Grid.Column="1"
                                Width="111"
                                Height="25"
                                HorizontalAlignment="Left"
                                Click="Export_to_Raport_M"
                                Content="Pobierz Raport" Margin="334,0,0,0" />
                        <Button x:Name="Editujczlonka"
                                Grid.Column="1"
                                Height="25"
                                Click="Editujczlonka_Click"
                                Content="Edituj czlonka" Width="85" 
                                HorizontalAlignment="Left" />
                    </Grid>
                </Grid>
            </Grid>
            <Grid
                x:Name="Content_ObslugaKlienta"
                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  Obsluga Klienta content  -->
                <StackPanel>
                    <Label Content="Wyszukaj klienta:" Width="110" HorizontalAlignment="Center" Height="30" />
                    <TextBox
                        x:Name="WyszukajKlientaTextBox"
                        Foreground="Gray"
                        GotFocus="WyszukajKlientaTextBox_GotFocus"
                        LostFocus="WyszukajKlientaTextBox_LostFocus"
                        Text="Wpisz imię, nazwisko lub email klienta" Height="25" Width="300" />
                    <Button
                        Margin="0,10,0,0"
                        Content="Wyszukaj"
                        GotFocus="WyszukajKlientaTextBox_GotFocus"
                        LostFocus="WyszukajKlientaTextBox_LostFocus" Width="100" HorizontalAlignment="Center" />
                    <Label Content="Informacje o kliencie:" Width="130" HorizontalAlignment="Center" Height="30" />
                    <TextBlock
                        x:Name="CustomerInfo"
                        Text="{Binding CustomerDetails}" Width="300" Height="25" Margin="10,0,0,0" />
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Content_RaportowanieAwarii"
                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  Raportowanie awarii content  -->
                <StackPanel>
                    <Label Content="Zgłoś awarię sprzętu:" Width="130" HorizontalAlignment="Center" Height="30" />
                    <ComboBox x:Name="BrokenEquipmentComboBox" Width="500" HorizontalAlignment="Center">
                        <ComboBoxItem Content="Rowerek stacjonarny" />
                        <ComboBoxItem Content="Orbitrek" />
                        <ComboBoxItem Content="Ławka do ćwiczeń" />
                    </ComboBox>
                    <Label Content="Opis problemu:" Width="110" HorizontalAlignment="Center" Height="30" />
                    <TextBox
                        x:Name="ProblemDescriptionTextBox"
                        Height="100"
                        AcceptsReturn="True"
                        TextWrapping="Wrap" Width="400" HorizontalAlignment="Center" />
                    <Label Content="Załącz zdjęcie:" Width="110" Height="30" HorizontalAlignment="Center" />
                    <Button
                        Margin="0,10,0,0"
                        Click="BrowseButton_Click"
                        Content="Przeglądaj..." Width="100" Height="25" />
                    <Image x:Name="IssueImage" Margin="0,10,0,0" />
                    <Button
                        Margin="0,10,0,0"
                        Click="ReportIssue_Click"
                        Content="Zgłoś" Width="100" Height="25" />
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Content_Informacje"
                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  Informacje content  -->
                <StackPanel>
                    <Label Content="O siłowni" Style="{StaticResource TitleLabelStyle}" />
                    <TextBlock Margin="10" TextWrapping="Wrap"><Run Text="Nasza siłownia oferuje szeroką gamę urządzeń i zajęć dla osób na każdym poziomie zaawansowania. Znajdziesz tu miłą atmosferę, profesjonalnych trenerów i nowoczesny sprzęt." /></TextBlock>
                </StackPanel>
                <!--  Linki do social media  -->
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        x:Name="FacebookIcon"
                        Width="32"
                        Height="32"
                        Source="/Icons/FacebookIcon.png" />
                    <Image
                        x:Name="InstagramIcon"
                        Width="32"
                        Height="32"
                        Margin="10,0,0,0"
                        Source="/Icons/InstagramIcon.png" />
                    <Image
                        x:Name="TwitterIcon"
                        Width="32"
                        Height="32"
                        Margin="10,0,0,0"
                        Source="/Icons/TwitterIcon.png" />
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Content_StatystykiAnalizy"
                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  statystyk i Analizy content  -->
                <StackPanel>
                    <Label Content="Statystyki sprzedaży" Width="200" HorizontalAlignment="Left" Height="30" />
                    <TextBlock Text="Całkowita liczba sprzedanych karnetów:" Width="300" Height="25" HorizontalAlignment="Left" />
                    <TextBlock
                        x:Name="TotalSoldMemberships"
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="{Binding TotalSoldMemberships, StringFormat=\{0:N0\}}" Height="25" Width="300" HorizontalAlignment="Left" />
                    <TextBlock Text="Przychód z ostatniego miesiąca:" Height="25" Width="250" HorizontalAlignment="Left" />
                    <TextBlock
                        x:Name="LastMonthRevenue"
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="{Binding LastMonthRevenue, StringFormat=C}" Height="25" Width="300" HorizontalAlignment="Left" />
                    <Label Content="Analiza frekwencji" Height="30" Width="130" HorizontalAlignment="Left" />
                    <TextBlock Text="Średnia frekwencja w ostatnim tygodniu:" Height="20" Width="250" HorizontalAlignment="Left" />
                    <TextBlock
                        x:Name="AvgAttendanceLastWeek"
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="{Binding AvgAttendanceLastWeek, StringFormat=\{0:N0\}}" Width="300" Height="25" />
                    <!--  Dodaj wykresy tutaj  -->
                    <Label Content="Wykres sprzedaży" Width="120" HorizontalAlignment="Left" />
                    <wpf:CartesianChart Height="368">
                        <wpf:CartesianChart.Series>
                            <wpf:LineSeries
                                PointGeometrySize="18"
                                Stroke="#FF4281F4"
                                Values="{Binding SalesValues}" />
                        </wpf:CartesianChart.Series>
                    </wpf:CartesianChart>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="Content_ArtykułyIPorady"
                Grid.Row="1"
                Margin="0,1,0,0"
                Visibility="Collapsed">
                <!--  Artykuły i porady content  -->
                <StackPanel>
                    <Label Content="Najnowsze artykuły i porady" Style="{StaticResource TitleLabelStyle}" Width="300" HorizontalAlignment="Left" />
                    <ListBox Width="500" HorizontalAlignment="Center">
                        <ListBoxItem Content="Jak poprawić technikę w trakcie treningu siłowego?" />
                        <ListBoxItem Content="10 prostych ćwiczeń na rozgrzewkę przed treningiem" />
                        <ListBoxItem Content="Dieta dla sportowców - jak się odżywiać, aby osiągnąć lepsze wyniki?" />
                    </ListBox>
                    <!--  Cytat motywacyjny  -->
                    <Label
                        Margin="0,10,0,0"
                        Content="Cytat dnia"
                        Style="{StaticResource TitleLabelStyle}" Width="100" HorizontalAlignment="Left" />
                    <TextBlock
                        Margin="5,10,5,0"
                        FontSize="12"
                        Foreground="Black"
                        Text="Nie liczy się to, jak mocno uderzasz, tylko jak mocne uderzenia potrafisz przyjąć i iść dalej. - Rocky Balboa"
                        TextWrapping="Wrap" Width="500" HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>


        <!--  Right Sidebar  -->
        <ScrollViewer
            Grid.Column="2"
            Margin="0,10,0,10"
            HorizontalScrollBarVisibility="Auto">
            <Border
                x:Name="RightSidebar"
                Width="272"
                Background="#3F83B5"
                CornerRadius="10">
                <StackPanel Height="Auto" Margin="0,50,0,10">

                    <!--  Mini pogoda  -->
                    <Expander
                        Header="Pogoda"
                        IsExpanded="True"
                        Style="{StaticResource ExpanderStyle}">
                        <StackPanel>
                            <StackPanel Margin="5,10,0,0" Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Kind="WeatherPartlyCloudy" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="White"
                                    Text="Aktualna temperatura: " />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{Binding CurrentTemperature}" />
                            </StackPanel>
                            <StackPanel Margin="5,0,0,0" Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Kind="{Binding TomorrowWeatherIcon}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="White"
                                    Text="Prognoza na jutro: " />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{Binding TomorrowTemperature}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Harmonogram zajęć  -->
                    <Expander
                        Header="Harmonogram zajęć"
                        IsExpanded="True"
                        Style="{StaticResource ExpanderStyle}">
                        <StackPanel
                            Width="188"
                            Margin="0,10,0,0"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="Calendar" />
                            <Calendar SelectedDatesChanged="Calendar_SelectedDatesChanged" />
                        </StackPanel>
                    </Expander>

                    <!--  Aktualności  -->
                    <Expander
                Header="Aktualności"
                IsExpanded="True"
                Style="{StaticResource ExpanderStyle}">
                        <StackPanel>
                            <StackPanel Margin="0,10,0,0">
                                <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="NewReleases" />
                                <TextBlock
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Dodaj notatkę:" />
                                <TextBox
                            x:Name="NewsTextBox"
                            Width="200"
                            Height="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Foreground="Black"
                            Background="White" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0">
                                <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Kind="Clock" />
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Ustaw przypomnienie:" />
                                <DatePicker
                            x:Name="ReminderDatePicker"
                            Width="200"
                            Foreground="Black"
                            Background="White" />
                                <materialDesign:TimePicker
                            x:Name="ReminderTimePicker"
                            Width="200"
                            Foreground="Black"
                            Background="White" />
                            </StackPanel>
                            <Button
                        Width="100"
                        Height="25"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="SaveNewsButton_Click"
                        Content="Zapisz"
                        Background="#0078D7"
                        Foreground="White" 
                        />
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </Border>
        </ScrollViewer>
        <Grid
            Grid.Column="2"
            Width="156"
            Height="35"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Button
                x:Name="UsernameButton"
                Width="Auto"
                Height="35"
                Margin="0,0,8,0"
                Padding="0"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="UsernameButton_Click"
                Foreground="White">
                <Button.ContextMenu>
                    <ContextMenu x:Name="UserContextMenu" IsEnabled="False">
                        <MenuItem Click="MojProfil_Click" Header="Moj Profil" />
                        <MenuItem Click="Ustawienia_Click" Header="Ustawienia" />
                        <MenuItem Click="Pomoc_Click" Header="Pomoc" />
                        <Separator />
                        <MenuItem Click="Wyloguj_Click" Header="Wyloguj" />
                    </ContextMenu>
                </Button.ContextMenu>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    From="160"
                                    To="170"
                                    Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    From="170"
                                    To="160"
                                    Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold"><Run Text="Użytkownik" /></TextBlock>
                            <TextBlock><Run Text="Kliknij, aby zobaczyć profil użytkownika" /></TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
                <StackPanel Width="134" Orientation="Horizontal">
                    <!--  Add user icon  -->
                    <Image
                        Width="20"
                        Height="20"
                        RenderTransformOrigin="-0.047,0.386"
                        Source="{Binding UserIcon}" />
                    <Label
                        x:Name="NazwaUżytkownika"
                        Width="91"
                        Height="31"
                        Content="{Binding UserName}"
                        FontSize="12"
                        Foreground="Purple"
                        Style="{StaticResource TitleLabelStyle}" />
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Kind="ChevronDown" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>

