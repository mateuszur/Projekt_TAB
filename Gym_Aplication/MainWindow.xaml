                        <TextBlock VerticalAlignment="Center" Text="Zarządzanie członkami" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    x:Name="Artykuly"
                    Click="Artykuly_Click"
                    IsChecked="False"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonStyleWithAnimation}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
