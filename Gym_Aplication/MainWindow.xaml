                        <Button x:Name="Edituj"
                                Grid.Column="1"
                                Height="25"
                                Click="Edituj_Click"
                                Content="Edituj" Width="85" 
                                HorizontalAlignment="Left" />
                    </Grid>
                </Grid>
            </Grid>
            <Grid
                x:Name="Content_Harmonogram2"
                Grid.Row="1"
